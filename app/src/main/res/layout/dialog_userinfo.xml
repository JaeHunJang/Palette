<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/ui_tv_id"
        android:textColor="#000000"
        android:text="ID : "
        android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/ui_tv_id"
        app:layout_constraintTop_toBottomOf="@+id/ui_tv_id"
        android:layout_marginTop="20dp"
        android:id="@+id/ui_tv_pw"
        android:textColor="#000000"
        android:text="PW : "
        android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintLeft_toRightOf="@id/ui_tv_pw"
        app:layout_constraintTop_toBottomOf="@id/ui_tv_id"
        android:layout_marginStart="10dp"
        android:id="@+id/ui_til_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ui_tit_pw"
            android:inputType="textPassword"
            android:editable="false"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/ui_tv_pw"
        app:layout_constraintTop_toBottomOf="@id/ui_tv_pw"
        android:layout_marginTop="20dp"
        android:id="@+id/ui_tv_nick"
        android:textColor="#000000"
        android:text="Name : "
        android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/ui_tv_nick"
        app:layout_constraintTop_toBottomOf="@id/ui_tv_nick"
        android:layout_marginTop="20dp"
        android:id="@+id/ui_tv_birth"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="BirthDay : "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/ui_tv_birth"
        app:layout_constraintTop_toBottomOf="@id/ui_tv_birth"
        android:layout_marginTop="20dp"
        android:id="@+id/ui_tv_hint"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Hint : "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
</androidx.constraintlayout.widget.ConstraintLayout>