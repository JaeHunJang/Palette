<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/new_ib_color1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"
            android:contentDescription="@string/new_ib_color_des" />

        <ImageButton
            android:id="@+id/new_ib_color2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0ff000"
            android:contentDescription="@string/new_ib_color_des" />

        <ImageButton
            android:id="@+id/new_ib_color3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#055550"
            android:contentDescription="@string/new_ib_color_des" />

        <ImageButton
            android:id="@+id/new_ib_color4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#111111"
            android:contentDescription="@string/new_ib_color_des" />

        <ImageButton
            android:id="@+id/new_ib_color5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000ff"
            android:contentDescription="@string/new_ib_color_des" />
    </LinearLayout>

    <com.skydoves.colorpickerview.ColorPickerView

        android:id="@+id/colorPickerView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:actionMode="always"
        app:alpha_flag="0.8"
        app:alpha_selector="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_color"
        app:palette="@drawable/palette"
        app:selector="@drawable/wheel">

    </com.skydoves.colorpickerview.ColorPickerView>

    <!--    <com.skydoves.colorpickerview.sliders.AlphaSlideBar
            app:layout_constraintLeft_toLeftOf="@+id/colorPickerView"
            app:layout_constraintTop_toBottomOf="@+id/colorPickerView"
            android:id="@+id/alphaSlideBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selector_AlphaSlideBar="@drawable/wheel"
            app:borderColor_AlphaSlideBar="@android:color/darker_gray"
            app:borderSize_AlphaSlideBar="5"/>-->

    <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
        android:id="@+id/brightnessSlide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:borderColor_BrightnessSlider="@android:color/darker_gray"
        app:borderSize_BrightnessSlider="5"
        app:layout_constraintLeft_toLeftOf="@+id/colorPickerView"
        app:layout_constraintTop_toBottomOf="@+id/colorPickerView"
        app:selector_BrightnessSlider="@drawable/wheel" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="R "
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_red"
        app:layout_constraintRight_toLeftOf="@id/new_sb_red"
        app:layout_constraintTop_toTopOf="@id/new_sb_red" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/new_sb_red"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:max="255"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightnessSlide" />

    <EditText
        android:id="@+id/new_edt_red"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/new_edt_color_init"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_red"
        app:layout_constraintLeft_toRightOf="@id/new_sb_red"
        app:layout_constraintTop_toTopOf="@id/new_sb_red"
        tools:targetApi="P" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="G "
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_green"
        app:layout_constraintRight_toLeftOf="@id/new_sb_green"
        app:layout_constraintTop_toTopOf="@id/new_sb_green" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/new_sb_green"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="255"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_sb_red" />

    <EditText
        android:id="@+id/new_edt_green"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/new_edt_color_init"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_green"
        app:layout_constraintLeft_toRightOf="@id/new_sb_green"
        app:layout_constraintTop_toTopOf="@id/new_sb_green"
        tools:targetApi="P" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="B "
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_blue"
        app:layout_constraintRight_toLeftOf="@id/new_sb_blue"
        app:layout_constraintTop_toTopOf="@id/new_sb_blue" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/new_sb_blue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="255"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_sb_green" />

    <EditText
        android:id="@+id/new_edt_blue"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/new_edt_color_init"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/new_sb_blue"
        app:layout_constraintLeft_toRightOf="@id/new_sb_blue"
        app:layout_constraintTop_toTopOf="@id/new_sb_blue"
        tools:targetApi="P" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_sb_blue" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/ic_radio_button_checked_black_24dp"
        app:borderWidth="0dp"

        app:fabCustomSize="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_color"
        tools:targetApi="P" />

</androidx.constraintlayout.widget.ConstraintLayout>